{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",

        "outFile": "dist/veclib.js",
        "declaration": true,
        "sourceMap": false,
        "removeComments": true,
		"noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

        "lib": ["es5"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": false
    },
    "include": [
        "src"
    ]
}
