{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",

        "outFile": "dist/veclib.js",
        "declaration": true,

        "noEmitOnError": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "lib": ["es5"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": false,
        "typeRoots": [
            "./typings"
        ],

        "removeComments": true,
        "sourceMap": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/mat4-simd.ts"
    ]
}
